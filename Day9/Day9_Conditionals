# Finding Grade status with conditionals

if average_score >= 9.5:
    grade_status = "Hero: Ready for Production!"
elif average_score >= 8:
    grade_status = "Zero-to-Hero: Strong Progress, Keep Pushing!"
else:
    grade_status = "Mentor Check: Review Core Concepts."

# Print output results

